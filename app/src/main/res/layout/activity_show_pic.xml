<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <ImageView
        android:layout_centerInParent="true"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/bot"
        android:transitionName="@string/picTranslationName"
        android:layout_marginTop="?attr/actionBarSize"
        android:id="@+id/img_show_meizhi"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:id="@+id/bot"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_download"
            android:layout_alignParentEnd="true"
            android:text="下载"
            android:textColor="#fff"
            android:textSize="10dp"
            android:gravity="center"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:drawableTop="@drawable/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_upload"
            android:layout_alignParentStart="true"
            android:text="上传"
            android:textColor="#fff"
            android:textSize="10dp"
            android:gravity="center"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:drawableTop="@drawable/ic_backup_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_opengallery"
            android:layout_centerHorizontal="true"
            android:text="图册"
            android:textColor="#fff"
            android:textSize="10dp"
            android:gravity="center"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:drawableTop="@drawable/pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>